<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Text_Style</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:backgroundTint">@color/yellow</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text_Style</item>
    </style>

    <style name="TextView_Option">
        <item name="android:textAppearance">@style/Text_Option</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/option_bg</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Text_Style">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/irish_grover</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

    <style name="Text_Title" parent="Text_Style">
        <item name="android:textSize">40sp</item>
        <item name="android:shadowRadius">30</item>
        <item name="android:shadowColor">@color/button</item>
    </style>

    <style name="Text_Option" parent="Text_Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>