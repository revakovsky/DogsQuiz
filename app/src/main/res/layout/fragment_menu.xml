<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".menuScreen.MenuFragment">

    <TextView
        android:id="@+id/main_title"
        style="@style/Text_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_title_50dp"
        android:layout_marginTop="@dimen/margin_title_50dp"
        android:layout_marginEnd="@dimen/margin_title_50dp"
        android:fontFamily="@font/irish_grover"
        android:text="@string/main_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dog_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/margin_title_50dp"
        android:contentDescription="@string/dog_image"
        android:src="@drawable/dog_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_title" />

    <Button
        android:id="@+id/start_game_button"
        style="@style/Button"
        android:layout_marginTop="@dimen/margin_title_50dp"
        android:fontFamily="@font/irish_grover"
        android:text="@string/start_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dog_image" />

    <Button
        android:id="@+id/exit_button"
        style="@style/Button"
        android:layout_marginTop="@dimen/margin_15dp"
        android:fontFamily="@font/irish_grover"
        android:text="@string/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_game_button" />

</androidx.constraintlayout.widget.ConstraintLayout>